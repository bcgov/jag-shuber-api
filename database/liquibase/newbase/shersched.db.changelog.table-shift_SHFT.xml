    <changeSet author="Carol Geisler" id="ADDTRG_shft_stamp">
      <sql>
        BEGIN;
        	DROP TRIGGER IF EXISTS trg_biu_shft_stamp ON ${POSTGRES_SCHEMA}.shift;
        	CREATE TRIGGER trg_biu_shft_stamp BEFORE INSERT OR UPDATE ON ${POSTGRES_SCHEMA}.shift
